
@model List<EFDbFirstApproach1.Models.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Product</h2>
<a href="/Product/Create">Create</a>
<form class="form-inline" action="/Product/index">
    <lable for="search"class="mr-1">Search</lable>
    <input type="search"class="form-control mr-1" id="search"name="search"placeholder="Search"value="@ViewBag.search">
    <button type="submit" class="btn btn-primary">Go</button>>
    </form>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date If Purchase</th>
        <th>Availability status</th>
        <th>CategoryId</th>
        <th>BrandId</th>
        <th>Active</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.ProductId</td>
    <td>@item.ProductName</td>
    <td>@item.Price.Value.ToString("C")</td>
    <td>@item.DateOdPurchase</td>

    <td>@item.AvailabilityStatus</td>
    <td>@item.CategoryId</td>
    <td>@item.BrandId</td>
    <td>@item.Active</td>
    
    <td>
        <a href="/Product/Detail/@item.ProductId">Details</a>
        <a href="/Product/edit/@item.ProductId">Edit</a>
        <a href="/Product/delete/@item.ProductId">Delete</a>
    </td>

</tr>
        
    }
</table>
