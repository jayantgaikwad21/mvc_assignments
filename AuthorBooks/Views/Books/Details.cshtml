@model AuthorBooks.Models.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>

<table class="table">
    <tr>
        <th>Book Id</th>
        <td>@Model.BookId</td>
    </tr>
    <tr>
        <th>Book Name</th>
        <td>@Model.BookName</td>
    </tr>
    <tr>
        <th>BookISBN</th>
        <td>@Model.BookISBN</td>
    </tr>
    <tr>
        <th>Date of Publish</th>
        <td>@Model.DateOfPublish</td>
    </tr>


    <tr>
        <th>Author Id</th>
        <td>
            @if (Model.Author != null)
            {

                @Model.Author.AuthorName}
        </td>
    </tr>


</table>

<a href="/Books/index">Back to Books Dashboard</a>
