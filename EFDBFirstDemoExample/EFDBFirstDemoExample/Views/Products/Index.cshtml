    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td><img src="data:image;base64,@item.Photo" width="100px" /></td>
    @*<td>@item.ProductId</td>*@
    <td> @Html.DisplayFor(temp => item.ProductId)   </td>           @*//html helper class*@
