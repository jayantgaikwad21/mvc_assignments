@model List<EFDBFirstDemoExample.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_LayoutPage1.cshtml";
}

<h2>Products Detail</h2>
<a href="/Products/create">Create</a>

<form class="form-inline" action="/Products/Index">
    @*<label for="search" class="mr-1">Search</label>*@
    @Html.Label("search", new {@class="mr-1"})
        
    @*<input type="search" class="form-control-mr-1" id="search" name="search" placeholder="Search" value="@ViewBag.search" />*@
    @Html.TextBox("search", ViewBag.search as string , new {@class="form-control-mr-1", placeholder="search"})
    <button type="submit" class="btn btn-primary">GO</button>
</form>

